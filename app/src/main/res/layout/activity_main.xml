<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_results"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_above="@+id/search_for_wifi_networks_button"
        android:layout_below="@+id/switchWifi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/search_for_networks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_for_wifi_networks_button"
        android:onClick="searchForWifiNetworksButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/blue"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Switch
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="turnWifiOnOrOff"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/switchWifi"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_alignRight="@+id/search_for_wifi_networks_button"
        android:layout_alignEnd="@+id/search_for_wifi_networks_button" />


</RelativeLayout>